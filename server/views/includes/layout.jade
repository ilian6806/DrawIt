doctype
html
	head
		title Draw It !
		link(rel="shortcut icon" href="../../img/favicon.ico" type="image/x-icon")
		link(rel="stylesheet" href="../../lib/bootstrap/dist/css/bootstrap.css")
		link(rel="stylesheet" href="../../lib/toastr/toastr.css")
		link(rel="stylesheet" href="../../css/site.css")

	body
		block main-content

		include scripts

		div#dialog-container
			div#dialog-overlay
			div#dialog
				div#dialog-header 
					span Confirmation
				div#dialog-content
				div#dialog-footer 
					button.btn.btn-success#btn-yes Yes
					button.btn.btn-danger#btn-no No
		
		#modal-dialog.modal
			.modal-dialog
				.modal-content
					.modal-header
						button.close(type="button" data-dismiss="modal" aria-hidden="false")
						h4.modal-title
					.modal-body
						p
					.modal-footer

		script(type='text/javascript').
			$menuItems = $('#main-nav').find('li');
			$pages = $('.page');

			$menuItems.on('click', function() {
				$menuItems.removeClass('active');
				$(this).addClass('active');
				$pages.hide();
				$('#'+ this.id.replace('nav-', '') + '-page').show();
			});

			$('#nav-game').trigger('click');